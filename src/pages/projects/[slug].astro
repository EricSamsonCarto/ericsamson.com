---
import { getCollection, type CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import PageLayout from '../../layouts/PageLayout.astro';

export type Props = {
  post: CollectionEntry<'projects'>;
}

export async function getStaticPaths() {
  const posts = await getCollection('projects');
  return posts.map((post: CollectionEntry<'projects'>) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post }: Props = Astro.props;
const { Content } = await post.render();
const thumbnailSrc = post.data.thumbnail?.replace('/public', '') || '';
---

<PageLayout title={post.data.title}>
  <article class="pt-2 pb-2">
    <h1 class="!text-4xl md:!text-5xl font-bold text-gray-900 mb-3 md:mb-4">
        {post.data.title}
    </h1>
      {post.data.thumbnail && (
        <div class="mb-2">
          <Image
            src={thumbnailSrc}
            alt={post.data.title}
            class="w-full rounded-lg shadow-lg"
            width={1200}
            height={630}
            loading="eager"
          />
        </div>
      )}
    <div class="border-l-4 border-gray-300 pl-4 md:pl-6 py-2 md:py-3 mb-2 mt-2">
      <p class="text-base md:text-lg text-gray-700 leading-relaxed italic">
        {post.data.description}
      </p>
    </div>

    {/* Project links */}
    <div class="flex gap-4 mb-3">
      {post.data.github && (
        <a
          href={post.data.github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm text-gray-700 hover:text-gray-900 hover:underline"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          View on GitHub
        </a>
      )}
      {post.data.link && (
        <a
          href={post.data.link}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm text-gray-700 hover:text-gray-900 hover:underline"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Live Demo
        </a>
      )}
    </div>

    <a
      href="/projects"
      class="inline-block mb-1 text-sm text-blue-600 hover:text-blue-800 hover:underline"
    >
      ‚Üê back to projects
    </a>
    <hr>

    <p class="text-sm italic font-bold text-gray-600 mb-3 mt-3">
      completed on: {post.data.date.toLocaleDateString('en-CA')}
    </p>

    <div class="prose prose-gray max-w-none prose-code:text-sm">
      <Content />
    </div>
  </article>
</PageLayout>
