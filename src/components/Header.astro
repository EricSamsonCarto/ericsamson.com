---
const currentPath = Astro.url.pathname;

const isActive = (path: string): boolean => {
  if (path === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(path);
};
---

<header class="dark:bg-gray-800 transition-colors duration-200 relative">
  <!-- Theme toggle button - fixed top-right on mobile, inline on desktop -->
  <button
    id="theme-toggle"
    class="fixed md:hidden top-4 right-4 z-50 p-2 rounded-lg bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors shadow-md"
    aria-label="Toggle dark mode"
  >
    <svg class="w-5 h-5 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
      <!-- Moon icon for light mode -->
      <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
    </svg>
    <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
      <!-- Sun icon for dark mode -->
      <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
    </svg>
  </button>

  <nav class="max-w-3xl mx-auto px-12 py-6 flex flex-col md:flex-row justify-between items-center gap-4 md:gap-0">
    <a
      href="/"
      class={`text-xl font-semibold text-gray-900 dark:text-white hover:text-gray-400 dark:hover:text-gray-300 transition-colors relative ${isActive('/') ? 'after:content-[""] after:absolute after:bottom-[-4px] after:left-1/2 after:-translate-x-1/2 after:w-[60%] after:h-[1px] after:bg-gray-900 dark:after:bg-white after:transition-colors hover:after:bg-gray-400' : ''}`}
    >
      Eric Samson
    </a>
    <div class="flex gap-8 items-center">
      <!-- Desktop theme toggle -->
      <button
        id="theme-toggle-desktop"
        class="hidden md:block p-2 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
        aria-label="Toggle dark mode"
      >
        <svg class="w-5 h-5 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
          <!-- Moon icon for light mode -->
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
        </svg>
        <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
          <!-- Sun icon for dark mode -->
          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
        </svg>
      </button>
      <a
        href="/projects"
        class={`text-gray-700 dark:text-white hover:text-gray-400 dark:hover:text-gray-300 transition-colors relative ${isActive('/projects') ? 'after:content-[""] after:absolute after:bottom-[-4px] after:left-1/2 after:-translate-x-1/2 after:w-[60%] after:h-[1px] after:bg-gray-900 dark:after:bg-white after:transition-colors hover:after:bg-gray-400' : ''}`}
      >
        projects
      </a>
      <a
        href="/writing"
        class={`text-gray-700 dark:text-white hover:text-gray-400 dark:hover:text-gray-300 transition-colors relative ${isActive('/writing') ? 'after:content-[""] after:absolute after:bottom-[-4px] after:left-1/2 after:-translate-x-1/2 after:w-[60%] after:h-[1px] after:bg-gray-900 dark:after:bg-white after:transition-colors hover:after:bg-gray-400' : ''}`}
      >
        writing
      </a>
    </div>
  </nav>
</header>

<script>
  import { initializeThemeToggle } from '../lib/theme-toggle';
  initializeThemeToggle();
</script>